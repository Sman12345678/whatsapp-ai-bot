# WhatsApp Business API Configuration
WHATSAPP_PHONE_ID=your_real_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_real_whatsapp_access_token
WHATSAPP_APP_ID=your_real_app_id
WHATSAPP_APP_SECRET=your_real_app_secret
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# Webhook Configuration
WEBHOOK_URL=https://your-actual-domain.com

# Google Gemini AI Configuration
GEMINI_API_KEY=your_real_gemini_api_key

# Bot Configuration
BOT_PREFIX=/
BOT_NAME=WhatsApp AI Bot
BOT_ADMIN_PHONE=+2348088941798

# Database Configuration
DATABASE_URL=sqlite:///whatsapp_bot.db

# Security Configuration
SESSION_SECRET=your_super_secret_session_key

# File Processing Configuration
MAX_FILE_SIZE=16777216
MAX_REQUESTS_PER_MINUTE=30

# Development Configuration
FLASK_ENV=development
FLASK_DEBUG=true

# Optional: Redis for production caching and rate limiting
# REDIS_URL=redis://localhost:6379/0

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn

# Optional: Logging configuration
LOG_LEVEL=INFO

# Uncomment and edit for production
# FLASK_ENV=production
# FLASK_DEBUG=false
# DATABASE_URL=postgresql://user:password@localhost/whatsapp_bot
# REDIS_URL=redis://localhost:6379/0
